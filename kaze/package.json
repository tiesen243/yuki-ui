{
  "name": "@yuki/kaze",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run build:registry && bun run build:shadcn && bun --env-file ../.env next build",
    "build:registry": "bun run scripts/build-registry.ts",
    "build:shadcn": "shadcn build __registry__/registry.autogenerated.json && bun run scripts/fix-registry.ts",
    "clean": "git clean -xdf .cache .next .source .turbo __registry__ node_modules",
    "dev": "bun --env-file ../.env next dev",
    "format": "prettier --check . --ignore-path ../.gitignore",
    "postinstall": "fumadocs-mdx",
    "lint": "bun --env-file ../.env next typegen && eslint",
    "start": "bun --env-file ../.env next start",
    "typecheck": "bun --env-file ../.env next typegen && tsc --noEmit"
  },
  "prettier": "@yuki/prettier-config",
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@yuki/lib": "workspace:*",
    "@yuki/ui": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "fumadocs-core": "^16.2.5",
    "fumadocs-mdx": "^14.1.0",
    "fumadocs-ui": "^16.2.5",
    "next": "^16.0.10",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "catalog:tailwind",
    "@types/mdx": "^2.0.13",
    "@types/node": "catalog:",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@yuki/eslint-config": "workspace:*",
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "shadcn": "^3.6.1",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "shiki": "^3.20.0"
  }
}
