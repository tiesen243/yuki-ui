{
  "name": "@yuki/kaze",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run build:registry && bun run build:shadcn && bun with-env next build",
    "build:registry": "bun run scripts/build-registry.ts",
    "build:shadcn": "shadcn build __registry__/registry.autogenerated.json && bun run scripts/fix-registry.ts",
    "clean": "git clean -xdf .cache .next .source .turbo __registry__ node_modules",
    "dev": "bun with-env next dev --turbopack --port 3000",
    "format": "prettier --check . --ignore-path ../.gitignore",
    "postinstall": "fumadocs-mdx",
    "lint": "bun with-env next typegen && eslint",
    "start": "bun with-env next start  --port 3000",
    "typecheck": "bun with-env next typegen && tsc --noEmit",
    "with-env": "dotenv -e ../.env --"
  },
  "prettier": "@yuki/prettier-config",
  "dependencies": {
    "@yuki/ui": "workspace:*",
    "@yuki/validators": "workspace:*",
    "fumadocs-core": "^15.7.13",
    "fumadocs-mdx": "^12.0.0",
    "fumadocs-ui": "^15.7.13",
    "next": "15.5.3",
    "react": "catalog:react",
    "react-dom": "catalog:react"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "catalog:tailwind",
    "@types/mdx": "^2.0.13",
    "@types/node": "catalog:",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@yuki/eslint-config": "workspace:*",
    "@yuki/prettier-config": "workspace:*",
    "@yuki/tsconfig": "workspace:*",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "shadcn": "^3.3.1",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:"
  }
}
